{
  "$ref": "projects.json",
  "properties": {
    "location": {
      "type": "object",
      "title": "Location",
      "properties": {
        "city": {
          "type": "string"
        },
        "state": {
          "type": "string"
        },
        "citystate": {
          "type": "string",
          "description": "",
          "template": "{{city}}, {{state}}",
          "watch": {
            "city": "projects.location.city",
            "state": "projects.location.state"
          }
        }
      }
    },
    "pets": {
      "type": "array",
      "format": "table",
      "title": "Pets",
      "uniqueItems": true,
      "items": {
        "type": "object",
        "properties": {
          "type": {
            "type": "string",
            "enum": [
              "cat",
              "dog"
            ],
            "default": "dog"
          },
          "name": {
            "type": "string"
          },
          "fixed": {
            "type": "boolean",
            "title": "spayed"
          }
        }
      }
    }
  }
}
